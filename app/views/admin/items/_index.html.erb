<table class="table mt-3">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %><tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= number_with_delimiter(item.price) %></td>
      <td><%= render 'tag_list', tag_list: item.tag_list %></td>
      <% if item.is_active == true %>
        <td class="text-success font-weight-bold">販売中</td>
      <% else %>
        <td class="text-secondary font-weight-bold">販売停止中</td>
      <% end %>
    </tr><% end %>
  </tbody>
</table>

