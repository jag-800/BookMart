<table class="table col-md-8">
  <thead class="bg-light">
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>

  <tbody>
    <% customers.each do |customer| %><tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.full_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <% if customer.is_active == true %>
        <td class="text-success font-weight-bold">有効</td>
      <% else %>
        <td class="text-secondary font-weight-bold">退会</td>
      <% end %>
  </tr><% end %>
  </tbody>
</table>
