<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="offset-md-1">
    <h5 class="px-4 table-secondary mb-4">商品新規登録</h5>
  </div>
</div>

<%= form_with model: @item, url:'/items', class:"mt-3" do |f| %>

  <div class="form-group row">
    <label for="inputItemImage" class="col-sm-2 col-form-label">商品画像</label>
    <div class="col-sm-5">
      <%= f.file_field :item_image, accept: "image/*" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">商品名</label>
    <div class="col-sm-5">
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "商品名", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputIntroduction" class="col-sm-2 col-form-label">商品説明文</label>
    <div class="col-sm-5">
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder: "ここに説明を記述します", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputGenre" class="col-sm-2 col-form-label">タグ名</label>
    <div class="col-sm-5">
      <%= f.text_field :tag_list, value: @item.tag_list.join(','), placeholder: "「,」をつければ複数登録できます", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">税抜価格</label>
    <div class="col-sm-5">
      <%= f.text_field :price, autofocus: true, id:"inputName", placeholder: "1000", class:"form-control" %>円
    </div>
  </div>

  <div class="form-group row">
    <label for="inputStatus" class="col-sm-2 col-form-label">販売ステータス</label>
    <div class="col-sm-5">
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_active, '販売中', checked: true, class: 'form-check-input' %>
        <%= f.label :is_active, '販売中', value: '販売中', class: 'form-check-label' %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_active, '販売停止中', class: 'form-check-input' %>
        <%= f.label :is_active, '販売停止中', value: '販売停止中', class: 'form-check-label' %>
      </div>
    </div>
  </div>


  <%= f.submit '新規登録', class: "btn btn-success" %>

<% end %>