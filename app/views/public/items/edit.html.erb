<div class="row">
  <div class="offset-md-1">
    <h5 class="px-4 table-secondary mb-4">商品編集</h5>
  </div>
</div>

<%= form_with model: @item, url: item_path(@item), method: :patch do |f| %>

  <div class="form-group row">
    <label for="inputItemImage" class="col-sm-2 col-form-label">画像</label>
    <div class="col-sm-5">
      <%= f.file_field :item_image, accept: "image/*" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">名前</label>
    <div class="col-sm-5">
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "商品名", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputIntroduction" class="col-sm-2 col-form-label">説明文</label>
    <div class="col-sm-5">
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder: "ここに説明を記述します", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputGenre" class="col-sm-2 col-form-label">タグ</label>
    <div class="col-sm-5">
      <%= f.text_field :tag_list, value: @item.tag_list.join(','), placeholder: "「,」をつければ複数登録できます", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">価格</label>
    <div class="col-sm-5">
      <%= f.text_field :price, autofocus: true, id:"inputName", placeholder: "1000", class:"form-control" %>
    </div>
    円
  </div>

<div class="row">
  <%= f.submit '変更を保存', class: "btn btn-success mx-auto" %>
</div>

<% end %>
