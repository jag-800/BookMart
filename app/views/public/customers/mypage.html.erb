<div class="row">
  <div class="offset-md-1">
    <h5 class="px-4 table-secondary">マイページ</h5>
  </div>
</div>

<div class="d-flex align-items-center my-3 mt-4">
  <h5 class="mb-0 mr-5">登録情報</h6>
  <%= link_to "編集する", edit_mypage_path, class:"btn btn-success ml-5" %>
</div>


<table class="table table-bordered border-dark col-md-6">
  <tr>
      <td class="table-secondary border-dark">氏名</td>
      <td class="border-dark"><%= @customer.full_name %></td>
  </tr>
  <tr>
      <td class="table-secondary border-dark">カナ</td>
      <td class="border-dark"><%= @customer.full_name_kana %></td>
  </tr>
  <tr>
      <td class="table-secondary border-dark">郵便番号</td>
      <td class="border-dark"><%= @customer.post_code %></td>
  </tr>
  <tr>
      <td class="table-secondary border-dark">住所</td>
      <td class="border-dark"><%= @customer.address %></td>
  </tr>
  <tr>
      <td class="table-secondary border-dark">電話番号</td>
      <td class="border-dark"><%= @customer.phone_number %></td>
  </tr>
  <tr>
      <td class="table-secondary border-dark">メールアドレス</td>
      <td class="border-dark"><%= @customer.email %></td>
  </tr>
</table>

<div class="d-flex align-items-center my-3 mt-4">
  <h5 class="mb-0 mr-5">配送先</h6>
  <%= link_to "一覧を見る", "", class:"btn btn-primary ml-3" %>
</div>

<div class="d-flex align-items-center my-3 mt-4">
  <h5 class="">自分の登録商品</h6>
  <%= link_to "一覧を見る", myitems_path, class:"btn btn-primary ml-3" %>
</div>


<div class="d-flex align-items-center my-3 mt-4">
  <h5>注文履歴</h5>
  <%= link_to "一覧を見る", "", class:"btn btn-primary ml-5" %>
</div>
