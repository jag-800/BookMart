<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h5 class="px-4 table-secondary mb-3">商品詳細</h5>
        <%= link_to @item.customer.full_name + "さんのページ", show_information_path(@item.customer), class: "btn btn-info ml-3 mb-2" %>
      </div>
      
      <%= image_tag @item.get_item_image(200,250) %>
      
      <table class="mb-3">
        <tbody>
          <tr>
            <td class="pb-3">名前</td>
            <td class="pb-3"><%= @item.name %></td>
          </tr>
          <tr>
            <td class="pb-3">説明文</td>
            <td class="pb-3"><%= @item.introduction %></td>
          </tr>
          <tr>
            <td class="pb-3">タグ</td>
            <td class="pb-3"><%= render 'public/items/tag_list', tag_list: @item.tag_list %></td>
          </tr>
          <tr>
            <td class="pb-3">価格</td>
            <td class="pb-3"><%= number_with_delimiter(@item.price) %>円</td>
          </tr>
          <tr>
            <td>販売状況</td>
            <% if @item.is_active == true %>
              <td class="text-success font-weight-bold">販売中</td>
            <% else %>
              <td class="text-secondary font-weight-bold">購入済み</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="offset-md-1 col-md-8">
      <% if current_customer != @item.buyer %>
        <h2><%= @item.buyer.full_name %> さんとのチャット</h2>
      <% else %>
        <h2><%= @item.customer.full_name %> さんとのチャット</h2>
      <% end %>
      <div class="message">
        <%= render "public/chats/message", chats: @chats, customer: @customer, my_name: @my_name %>
      </div>

      <%= form_with model: @chat, data: {remote: true} do |f| %>
        <div class="errors">
          <%= render "layouts/errors", obj: f.object %>
        </div>
        <div class="form-group">
          <%= f.text_field :message, placeholder: "メッセージを入力してください", autocomplete: "off", class: 'form-control' %>
        　<%= f.hidden_field :room_id, value: @room.id %>
        </div>
        <%= f.submit "送信", class:"mb-3 btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>